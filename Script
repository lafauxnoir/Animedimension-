-- Interface Roblox custom
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "AnimeUI"

-- Menu principal
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 300)
frame.Position = UDim2.new(0.5, -125, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true -- rend le menu déplaçable

-- Bouton flottant pour rouvrir
local openBtn = Instance.new("TextButton", gui)
openBtn.Size = UDim2.new(0, 50, 0, 50)
openBtn.Position = UDim2.new(1, -60, 1, -60) -- en bas à droite
openBtn.Text = "☰"
openBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
openBtn.TextColor3 = Color3.new(1, 1, 1)
openBtn.Visible = false -- caché au début

-- Fonction bouton
local function createButton(text, posY, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0, 230, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, posY)
    btn.Text = text
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.BorderSizePixel = 0
    btn.MouseButton1Click:Connect(callback)
end

-- Fonctions
createButton("Auto Farm", 10, function()
    print("Auto Farm activé")
    -- Ajoute ton code ici
end)

createButton("TP Zone", 60, function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(0, 10, 0)
end)

createButton("God Mode", 110, function()
    local h = game.Players.LocalPlayer.Character.Humanoid
    h.MaxHealth = math.huge
    h.Health = math.huge
end)

createButton("Attack Speed", 160, function()
    for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
        if v:IsA("Tool") then
            v.Activated:Connect(function()
                v:Activate()
                wait(0.05)
            end)
        end
    end
end)

createButton("Fermer", 210, function()
    frame.Visible = false
    openBtn.Visible = true
end)

-- Bouton pour rouvrir le menu
openBtn.MouseButton1Click:Connect(function()
    frame.Visible = true
    openBtn.Visible = false
end)
